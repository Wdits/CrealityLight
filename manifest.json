{
  "manifest_version": 3,
  "name": "Creality Light Switch",
  "version": "0.1.0",
  "description": "Adds LED functionality and Dark Mode on the Creality on-board camera site.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Creality Light Switch",
    "default_popup": "popup.html"
  }
}


